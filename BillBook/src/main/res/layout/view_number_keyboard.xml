<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="presenter"
            type="com.owl.book.tally.AddOneFragment.Presenter"/>
    </data>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="209dp"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                style="@style/AppNumberKeyboard"
                android:onClick='@{() -> presenter.onKeyboardNumClick("7")}'
                android:text="7"/>

            <Button
                style="@style/AppNumberKeyboard"
                android:onClick='@{() -> presenter.onKeyboardNumClick("8")}'
                android:text="8"/>

            <Button
                style="@style/AppNumberKeyboard"
                android:onClick='@{() -> presenter.onKeyboardNumClick("9")}'
                android:text="9"/>

            <Button
                style="@style/AppNumberKeyboard"
                android:onClick='@{() -> presenter.onKeyboardNumClick("Del")}'
                android:text="Del"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                style="@style/AppNumberKeyboard"
                android:onClick='@{() -> presenter.onKeyboardNumClick("4")}'
                android:text="4"/>

            <Button
                style="@style/AppNumberKeyboard"
                android:onClick='@{() -> presenter.onKeyboardNumClick("5")}'
                android:text="5"/>

            <Button
                style="@style/AppNumberKeyboard"
                android:onClick='@{() -> presenter.onKeyboardNumClick("6")}'
                android:text="6"/>

            <Button
                style="@style/AppNumberKeyboard"
                android:onClick='@{() -> presenter.onKeyboardNumClick("+")}'
                android:text="+"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                style="@style/AppNumberKeyboard"
                android:onClick='@{() -> presenter.onKeyboardNumClick("1")}'
                android:text="1"/>

            <Button
                style="@style/AppNumberKeyboard"
                android:onClick='@{() -> presenter.onKeyboardNumClick("2")}'
                android:text="2"/>

            <Button
                style="@style/AppNumberKeyboard"
                android:onClick='@{() -> presenter.onKeyboardNumClick("3")}'
                android:text="3"/>

            <Button
                style="@style/AppNumberKeyboard"
                android:onClick='@{() -> presenter.onKeyboardNumClick("-")}'
                android:text="-"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                style="@style/AppNumberKeyboard"
                android:onClick='@{() -> presenter.onKeyboardNumClick("C")}'
                android:text="C"/>

            <Button
                style="@style/AppNumberKeyboard"
                android:onClick='@{() -> presenter.onKeyboardNumClick("0")}'
                android:text="0"/>

            <Button
                style="@style/AppNumberKeyboard"
                android:onClick='@{() -> presenter.onKeyboardNumClick(".")}'
                android:text="."/>

            <Button
                style="@style/AppNumberKeyboard"
                android:onClick='@{() -> presenter.onKeyboardNumClick("确定")}'
                android:text="确定"/>

        </TableRow>
    </TableLayout>
</layout>