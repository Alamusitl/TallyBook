<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="presenter"
            type="com.owl.book.choose.ChooseFragment.Presenter"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="@{presenter.onBackgroundClick}"/>

        <TextView
            android:id="@+id/id_choose_title"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/color_white"
            android:drawableBottom="@drawable/shape_bg_line"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_5"
            android:text="@string/add_choose_account"
            android:textSize="22sp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/id_choose_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:background="@color/color_white"/>

    </LinearLayout>
</layout>
