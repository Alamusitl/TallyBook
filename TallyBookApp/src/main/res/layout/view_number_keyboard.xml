<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="209dp"
             android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            style="@style/AppNumberKeyboard"
            android:text="7"/>

        <TextView
            style="@style/AppNumberKeyboard"
            android:text="8"/>

        <TextView
            style="@style/AppNumberKeyboard"
            android:text="8"/>

        <TextView
            style="@style/AppNumberKeyboard"
            android:text="Del"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            style="@style/AppNumberKeyboard"
            android:text="4"/>

        <TextView
            style="@style/AppNumberKeyboard"
            android:text="5"/>

        <TextView
            style="@style/AppNumberKeyboard"
            android:text="6"/>

        <TextView
            style="@style/AppNumberKeyboard"
            android:text="+"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            style="@style/AppNumberKeyboard"
            android:text="1"/>

        <TextView
            style="@style/AppNumberKeyboard"
            android:text="2"/>

        <TextView
            style="@style/AppNumberKeyboard"
            android:text="3"/>

        <TextView
            style="@style/AppNumberKeyboard"
            android:text="-"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            style="@style/AppNumberKeyboard"
            android:text="C"/>

        <TextView
            style="@style/AppNumberKeyboard"
            android:text="0"/>

        <TextView
            style="@style/AppNumberKeyboard"
            android:text="."/>

        <TextView
            style="@style/AppNumberKeyboard"
            android:text="确定"/>

    </TableRow>
</TableLayout>